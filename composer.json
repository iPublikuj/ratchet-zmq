{
	"name"			: "ipub/ratchet-zmq",
	"type"			: "library",
	"description"	: "ZeroMQ pusher & consumer implementation for ipub/ratchet",
	"keywords"		: ["nette", "ratchet", "zmq", "zeromq", "websockets", "ipub", "ipublikuj", "framework", "tools"],
	"homepage"		: "https://github.com/iPublikuj/ratchet-zmq",
	"license"		: ["GPL-2.0", "GPL-3.0"],

	"authors": [
		{
			"name"		: "iPublikuj:cms",
			"email"		: "info@ipublikuj.eu",
			"homepage"	: "http://www.ipublikuj.eu/"
		}
	],

	"support":{
		"email"		:"support@ipublikuj.eu",
		"issues"	:"https://github.com/iPublikuj/ratchet-zmq/issues"
	},

	"extra": {
		"ipub"	: {
			"configuration" : {
				"extensions" : {
					"ratchet" : "IPub\\RatchetZMQ\\DI\\RatchetZMQExtension"
				}
			}
		}
	},

	"require": {
		"php"	: ">=7.0.0",

		"react/zmq": "~0.3.0",

		"ipub/ratchet"	: "~1.0",

		"pds/skeleton"	: "^1.0",

		"psr/log"	: "~1.0"
	},

	"require-dev": {
		"nette/bootstrap"		: "~2.4",
		"nette/mail"			: "~2.4",
		"nette/robot-loader"	: "~2.4",
		"nette/safe-stream"		: "~2.3",
		"nette/tester"			: "@dev",

		"tracy/tracy"	: "@dev"
	},

	"suggest": {
		"ext-zmq": "*"
	},

	"autoload": {
		"psr-0": {
			"IPub\\RatchetZMQ\\": "src/"
		}
	}
}
